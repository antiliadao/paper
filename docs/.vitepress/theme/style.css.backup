/* 导入K2D字体 */
@import url('https://fonts.googleapis.com/css2?family=K2D:wght@100;200;300;400;500;600;700;800&display=swap');

/* 蚂蚁家园品牌色系 - 基于绿色系配色 */

:root {
  /* 设置K2D为全局字体 */
  --vp-font-family-base: 'K2D', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  --vp-font-family-mono: 'K2D', source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace;
  
  /* 主要品牌色 - 蚂蚁绿 */
  --vp-c-brand: #059669;        /* 主色 - 深绿 */
  --vp-c-brand-light: #10b981;  /* 亮绿 */
  --vp-c-brand-dark: #047857;   /* 深绿 */
  --vp-c-brand-lighter: #34d399; /* 更亮的绿 */
  --vp-c-brand-darker: #065f46;  /* 更深的绿 */
  
  /* 三层契约容器配色 */
  --vp-custom-block-tip-border: #10b981;    /* 情感契约 - 亮绿边框 */
  --vp-custom-block-tip-text: #059669;      /* 情感契约 - 深绿文字 */
  --vp-custom-block-tip-bg: #f0fdf4;        /* 情感契约 - 浅绿背景 */
  
  --vp-custom-block-info-border: #059669;   /* 理性契约 - 主绿边框 */
  --vp-custom-block-info-text: #047857;     /* 理性契约 - 深绿文字 */
  --vp-custom-block-info-bg: #ecfdf5;       /* 理性契约 - 浅绿背景 */
  
  --vp-custom-block-warning-border: #047857; /* 技术契约 - 深绿边框 */
  --vp-custom-block-warning-text: #064e3b;   /* 技术契约 - 最深绿文字 */
  --vp-custom-block-warning-bg: #d1fae5;     /* 技术契约 - 中绿背景 */
}

/* 暗色主题调整 */
html.dark {
  --vp-custom-block-tip-border: #10b981;
  --vp-custom-block-tip-bg: rgba(16, 185, 129, 0.1);
  
  --vp-custom-block-info-border: #059669;
  --vp-custom-block-info-bg: rgba(5, 150, 105, 0.1);
  
  --vp-custom-block-warning-border: #047857;
  --vp-custom-block-warning-bg: rgba(4, 120, 87, 0.1);
}

/* 优化中文排版 - 使用K2D字体 */
.vp-doc {
  font-family: 'K2D', sans-serif;
  line-height: 1.8;
  letter-spacing: 0.02em;
}

/* 确保所有文本使用K2D字体 */
body, .VPNav, .VPSidebar, .VPContent, .VPDoc {
  font-family: 'K2D', sans-serif !important;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'K2D', sans-serif !important;
}

/* 三层内容间距优化 */
.vp-doc h2 {
  margin-top: 48px;
  padding-top: 24px;
  border-top: 1px solid var(--vp-c-divider);
}

.vp-doc h2:first-child {
  border-top: none;
}

/* 增强三层架构视觉效果 */
.custom-block.tip {
  border-left: 4px solid var(--vp-custom-block-tip-border);
}

.custom-block.info {
  border-left: 4px solid var(--vp-custom-block-info-border);
}

.custom-block.warning {
  border-left: 4px solid var(--vp-custom-block-warning-border);
}

/* 蚂蚁家园logo区域样式 */
.VPNavBarTitle .title {
  font-weight: 600;
  color: var(--vp-c-brand);
}